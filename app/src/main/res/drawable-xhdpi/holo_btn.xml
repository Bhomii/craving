<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/squareColor" />
            <gradient android:angle="-90" android:startColor="@color/squareColor" android:endColor="@color/squareColor"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/squareColor" />
            <solid android:color="@color/squareColor"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <stroke android:width="5dip" android:color="@color/squareColor"/>
            <gradient android:angle="-90" android:startColor="@color/squareColor" android:endColor="@color/squareColor"/>
        </shape>
    </item>
</selector>