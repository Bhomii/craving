<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pawras.mindful">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.pawras.mindful.activities.AppController"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pawras.mindful.activities.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pawras.mindful.activities.HomePage"
            android:screenOrientation="portrait" />
        <activity android:name="com.pawras.mindful.activities.squares.SecondSquare" />
        <activity android:name="com.pawras.mindful.activities.squares.ThirdSquare" />
        <activity android:name="com.pawras.mindful.activities.EnterText" />
        <activity android:name="com.pawras.mindful.activities.MenuPage" />
        <activity android:name="com.pawras.mindful.activities.ThirdMenu" />
        <activity android:name="com.pawras.mindful.activities.FourthMenu" />
        <activity android:name="com.pawras.mindful.activities.SixMenu" />
        <activity android:name="com.pawras.mindful.activities.DateActivity" />
        <activity android:name="com.pawras.mindful.activities.squares.FirstSquare" />
        <activity android:name="com.pawras.mindful.activities.Explanation" />
        <activity android:name="com.pawras.mindful.activities.ListofFeelings" />
        <activity android:name="com.pawras.mindful.activities.MenusActivity" />
        <activity android:name="com.pawras.mindful.activities.History" />
        <activity android:name="com.pawras.mindful.activities.HistoryCategory" />
        <activity android:name="com.pawras.mindful.activities.HistorySquares" />
        <activity
            android:name="com.pawras.mindful.activities.SignUp"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name="com.pawras.mindful.activities.PDFViewer" />
    </application>

</manifest>